    name: ctlplane
    subnets:
    - allocationRanges:
      - end: 172.22.0.120
        start: 172.22.0.100
      - end: 172.22.0.200
        start: 172.22.0.150
      cidr: 172.22.0.0/24
      gateway: 172.22.0.1
      name: subnet1
  - dnsDomain: internalapi.sandbox-lk8xd-ocp4-cluster.svc.cluster.local
    name: internalapi
    subnets:
    - allocationRanges:
      - end: 172.17.0.250
        start: 172.17.0.100
      cidr: 172.17.0.0/24
      excludeAddresses:
      - 172.17.0.10
      - 172.17.0.12
      name: subnet1
  - dnsDomain: tenant.sandbox-lk8xd-ocp4-cluster.svc.cluster.local
    name: tenant
    subnets:
    - allocationRanges:
      - end: 172.19.0.250
        start: 172.19.0.100
      cidr: 172.19.0.0/24
      excludeAddresses:
      - 172.19.0.10
      - 172.19.0.12
